    <img src="/images/doctorr-removebg-preview.png" alt="">
    
  </div>
    <div class="sgns-testimonial-cards" id="testimonialSlider">
      <!-- Card 1 -->
       
      <div class="sgns-work">
        <div class="sgns-work2">
        <div class="sgns-testimonial-card">
        <img src="/images/lized-recovery-for-pain-free-living.jpg" alt="Ortho-expert-img">
        <h4><i class="fas fa-user-md"></i> Renowned Orthopedic Experts</h4>
      </div>
      <!-- Card 2 -->
      <div class="sgns-testimonial-card">
        <img src="/images/siotherapy-in-etobicoke-at226128166.jpg" alt="rehab-plans-img">
        <h4><i class="fas fa-walking"></i> Personalized Rehab Plans</h4>
      </div>
    </div>
      <!-- Card 3 -->
      <div class="sgns-work2mate">
      <div class="sgns-testimonial-card">
        <img src="/images/surgery-in-pune-oncolife-hospitals.jpg" alt="enviorment-img">
        <h4><i class="fas fa-hospital"></i> Compassionate Environment</h4>
      </div>
    </div>
    </div>

</div>

</section>

    <a href="/blogpage" class="back-btn">‚Üê Back to Home</a>
  </div>
  <%- include("partial/footer") %>
</body>
</html>
