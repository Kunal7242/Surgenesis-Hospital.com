<script>
  const blogSlider = document.getElementById("blogSlider");
  let cardWidthe = 325;
  let scrollIndex = 0;

  function scrollBlog(direction) {
    const totalCards = blogSlider.children.length;
    const visibleCards = 3;
    scrollIndex += direction;

    if (scrollIndex < 0) scrollIndex = totalCards - visibleCards;
    if (scrollIndex > totalCards - visibleCards) scrollIndex = 0;

    blogSlider.scrollTo({
      left: scrollIndex * cardWidthe,
      behavior: "smooth"
    });
  }

  // Optional auto-looping every 4 seconds
  setInterval(() => scrollBlog(1), 4000);
</script>

