<script>
  let styledBlogIndex = 0;
  const styledBlogSlider = document.getElementById("styledBlogSlider");
  const styledBlogCards = document.querySelectorAll(".styled-blog-card");
  const totalStyledBlogs = styledBlogCards.length;

  function shiftStyledBlogSlide(direction) {
    styledBlogIndex += direction;
    if (styledBlogIndex < 0) styledBlogIndex = totalStyledBlogs - 1;
    if (styledBlogIndex >= totalStyledBlogs) styledBlogIndex = 0;

    const cardWidth = styledBlogCards[0].offsetWidth + 20; // 20px assumed gap
    styledBlogSlider.style.transform = `translateX(-${styledBlogIndex * cardWidth}px)`;
  }

  // Auto-scroll every 4 seconds
  setInterval(() => {
    shiftStyledBlogSlide(1);
  }, 4000);
</script>

<script>
  const blogWrapper = document.getElementById('blogWrapper');
  const carrs = blogWrapper.querySelectorAll('.styled-blog-card');
  const total = carrs.length / 2; // Original number before clone
  let current = 0;

  function autoSlide() {
    current++;
    if (current === total * 2) {
      blogWrapper.scrollLeft = 0;
      current = 1;
    }
    blogWrapper.scrollTo({
      left: carrs[0].offsetWidth * current,
      behavior: 'smooth'
    });
  }

  setInterval(autoSlide, 4000);
</script>




