<style>
     .leadership-section {
  position: relative;
  padding: 80px 20px;
  background-color: #f1f5f9;
  overflow: hidden;
  z-index: 1;
}

.leadership-section::before {
  content: "";
  position: absolute;
  top: 5px;
  left: -60px;
  width: 200%;
  height: 33%;
  background-color: #BD1E1E;
  transform: rotate(-4deg);
  z-index: -1;
  border-radius: 50%;
}
.leadership-section::after{
   content: "";
  position: absolute;
  top: 5px;
  left: -60px;
  width: 200%;
  height: 33%;
  background-color: #003865;
  transform: rotate(4deg);
  z-index: -1;
  border-radius: 50%;

}

.leadership-heading::before {
  content: "";
  position: absolute;
  top: 1000px;
  left:  -60px;
  width: 100%;
  height: 20%;
  background-color: #ffadad;
  transform: rotate(-4deg);
  z-index: -1;
  border-radius: 60%;

}
.leadership-heading::after{
   content: "";
  position: absolute;
  top: 535px;
  left: -60px;
  width: 100%;
  height: 33%;
  background-color: #daedfd;
  transform: rotate(4deg);
  z-index: -1;
  border-radius: 60%;
  

}

.leadership-heading {
  text-align: center;
  color: white;
  margin-bottom: 60px;
}

.leadership-heading h2 {
  font-size: 36px;
  margin-bottom: 10px;
}

.leadership-heading p {
  color: #dbe7f3;
  font-size: 16px;
}

.leadership-container {
  max-width: 1100px;
  margin: auto;
  display: flex;
  flex-direction: column;
  gap: 60px;
}

.leader-box {
  display: flex;
  align-items: center;
  gap: 40px;
  background-color: white;
  padding: 30px;
  border-radius: 16px;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.leader-box.reverse {
  flex-direction: row-reverse;
}

.leader-image img {
  width: 220px;
  object-fit: cover;
  border-radius:10px;

}

.leader-content {
  flex: 1;
}

.leader-content h3 {
  color: #003865;
  font-size: 24px;
  margin-bottom: 15px;
}

.leader-content p {
  font-size: 16px;
  line-height: 1.6;
  color: #444;
}

.leader-content i {
  color: #BD1E1E;
  font-size: 16px;
  margin: 0 5px;
}

/* Responsive */
@media (max-width: 768px) {
  .leader-box,
  .leader-box.reverse {
    flex-direction: column;
    text-align: center;
  }

  .leader-image img {
    width: 160px;
    height: 160px;
  }

  .leader-content h3 {
    font-size: 20px;
  }

  .leader-content p {
    font-size: 15px;
  }
}

</style>
