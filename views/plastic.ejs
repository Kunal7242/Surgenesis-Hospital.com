<script>
  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".hero-banner-text h1", {
    opacity: 0,
    x: -50,
    duration: 1,
    ease: "power2.out",
    scrollTrigger: {
      trigger: ".hero-banner",
      start: "top 80%",
      toggleActions: "play none none reverse"
    }
  });

  gsap.from(".hero-banner-text p", {
